<div class="container">
	<div class="row">
      <h2>登録情報編集</h2>
    </div>
<%= form_for @employee do |f| %>
	<table>
		<thead>
			<th></th>
			<th></th>
			<th></th>
		</thead>
		<tbody>
			<tr>
				<td>名前</td>
				<td><%= f.label :first_name, "(姓)", class: "customer_name" %> <%= f.text_field :first_name, :placeholder =>"#{@employee.first_name}", autocomplete: 'first_name' %></td>
				<td><%= f.label :last_name, "(名)", class: "customer_name" %> <%= f.text_field :last_name, :placeholder =>"#{@employee.last_name}", autocomplete: 'last_name' %></td>
			</tr>
			<tr>
				<td>フリガナ</td>
				<td><%= f.label :first_name_kana, "(セイ)" %> <%= f.text_field :first_name_kana, :placeholder =>"#{@employee.first_name_kana}" %></td>
				<td><%= f.label :last_name_kana, "(メイ)" %> <%= f.text_field :last_name_kana, :placeholder =>"#{@employee.last_name_kana}" %></td>
			</tr>
			<tr>
				<td><%= f.label :email, "メールアドレス" %></td>
				<td colspan="2"><%= f.email_field :email, autocomplete: "email", :placeholder =>"#{@employee.email}" %></td>
			</tr>
			<tr>
				<td>性別</td>
				<td><%= f.label :男  %>
			        <%= f.radio_button :gender, :man %>
			        <%= f.label :女  %>
			        <%= f.radio_button :gender, :woman %></td>
			</tr>
			<tr>
				<td>役職</td>
				<td><%= f.select :position, Employee.positions.keys.to_a, selected: @employee %></td>
			</tr>
			<tr>
				<td colspan="3"><%= f.submit "更新", class: "btn btn-primary" %></td>
			</tr>
		</tbody>
	</table>
</div>