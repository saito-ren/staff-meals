<div class="container">
<% if flash[:notice] %>
<p class="text-active"><%= flash[:notice] %></p>
<% end %>
<h2>マイページ</h2>
<div class="container">
<div class="row">
<div class="col-xs-5"><h3>登録情報</h3></div>
<div class="col-xs-2">
	<%= link_to "編集する", edit_employee_employee_path(current_employee), class: "btn btn-success ml2" %>
</div>
<div class="col-xs-4">
	<%= link_to "パスワードを変更する", edit_employee_registration_path, class: "btn btn-success ml2" %>
</div>
</div>
</h3>
<table>
	<thead>
		<th></th>
		<th></th>
		<th></th>
	</thead>
	<tbody>
		<tr>
			<td>名前</td>
			<td>(姓) <%= @employee.first_name %></td>
			<td>(名) <%= @employee.last_name %></td>
		</tr>
		<tr>
			<td>フリガナ</td>
			<td>(セイ) <%= @employee.first_name_kana %></td>
			<td>(メイ) <%= @employee.last_name_kana %></td>
		</tr>
		<tr>
			<td>性別： <%= @employee.gender %></td>
		    <td>役職： <%= @employee.position %></td>
		</tr>
		<tr>
			<td>メールアドレス</td>
			<td colspan="2"><%= @employee.email %></td>
		</tr>
		<tr>
			<td>ステータス：<%= @employee.status %></td>
		</tr>
	</tbody>
</table>
<%= link_to "注文履歴一覧を見る", employee_orders_path(@employee), class: "btn btn-primary" %>
</div>
</div>