<section class="wrapper flex">
	<div class="sidebar">
		<h3>カテゴリー検索</h3>
		<%= render 'layouts/sidebar', categorys: @categorys %>

	</div>
	<div class="content">
		<div class="mv">
			<p>
				ようこそ、NaganoCakeへ!<br>
				このサイトは、ケーキ販売のECサイトになります。<br>
				会員でない方も商品の閲覧はできますが、<br>
				購入には会員登録が必要になります。
			</p>
		</div>
		<h2 class="section-ttl">今日のオススメ</h2>
		<div class="items">
			<% @menus.each do |menu| %>
				<%= link_to employee_menu_path(menu) do %>
					<%= attachment_image_tag menu, :image, size: '100x100', format: "jpeg", fallback: "2Ol4Vx9bWwqIFD5gONZpD2Syergfe2cB.png" %>
					<h5><%= menu.category.name %></h5>
					<p><%= menu.name %></p>
				<% end %>
			<% end %>
			<h2>ランキング</h2>
			<% @rank_menus.each.with_index(1) do |menu, i| %>
			  <%= link_to employee_menu_path(@rank_menus) do %>
			    <%= attachment_image_tag menu, :image, size: '100x100', format: "jpeg", fallback: "2Ol4Vx9bWwqIFD5gONZpD2Syergfe2cB.png" %>
			    <h4>第<%= i %> 位</h4>
			    <h3><%= menu.name %></h3>
			  <% end %>
			<% end %>
		</div>
	</div>
</section>