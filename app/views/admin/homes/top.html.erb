<div class="container">
<h2>管理者トップページ</h2>
<h3>本日の注文一覧</h3>

<table class="table">
	<thead>
		<tr>
			<th>注文日時</th>
			<th>購入者</th>
			<th>メニュー名</th>
		</tr>
	</thead>
	<tbody>
		<% @orders.each do |order| %>
		  <tr>
		  	<td><%= order.created_at.strftime('%Y/%m/%d/%H:%M:%S') %></td>
		  	<td><%= order.employee.full_name %></td>
		  	<td><%= order.menu.name %></td>
		  </tr>
		<% end %>
	</tbody>
</table>
</div>