<h2>従業員一覧</h2>

<table>
	<thead>
		<tr>
			<th>名前</th>
			<th>フリガナ</th>
			<th>役職</th>
			<th>ステータス</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		<% @employees.each do |employee| %>
		<tr>
			<td><%= employee.full_name %></td>
			<td><%= employee.full_name_kana %></td>
			<td><%= employee.position %></td>
			<td><%= employee.status %></td>
		</tr>
		<% end %>
	</tbody>
</table>